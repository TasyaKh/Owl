<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_bottom_dashed"
    android:padding="5dp">

    <include layout="@layout/list_design_main_content"
        android:id="@+id/list_design_main_content"/>

    <TextView
        android:id="@+id/id_correct"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="number of element"
        android:gravity="center"
        android:maxWidth="50dp"
        android:padding="@dimen/size_5dp"
        android:text="@string/none"
        android:textSize="15sp"
        android:textStyle="bold"
        app:drawableTopCompat="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:padding="@dimen/size_5dp"
        android:id="@+id/id_incorrect"
        android:layout_width="50dp"
        android:maxWidth="50dp"
        android:text="@string/none"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="number of element"
        app:drawableTopCompat="@drawable/ic_wrong"/>

</LinearLayout>